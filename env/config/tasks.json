{
  "clean": {
    "subtasks": [{
      "name": "default",
      "files": {
        "dest": "<%= destination %>"
      }
    }]
  },
  "copy": {
    "subtasks": [{
      "name": "default",
      "files": {
        "src": ["src/**/assets/**/*.{svg,ico,png,jpg,gif}", "!src/common/**/*", "!src/**/assets/fonts/**/*", "src/**/manifest.js", "src/**/fallback.jpg"],
        "dest": "<%= destination %>"
      }
    }, {
      "name": "external",
      "files": {
        "src": ["src/**/external/**/*"],
        "dest": "<%= destination %>"
      }
    }],
    "watch": [{
      "src": ["src/**/assets/**/*.{svg,ico,png,jpg,gif}", "!src/common/**/*", "!src/**/assets/fonts/**/*"],
      "tasks": ["default"]
    }, {
      "src": ["src/**/external/**/*"],
      "tasks": ["external"]
    }]
  },
  "fontmin": {
    "subtasks": [{
      "name": "default",
      "files": {
        "src": ["src/**/assets/fonts/**/glyphs.txt"],
        "dest": "<%= destination %>"
      }
    }]
  },
  "handlebars": {
    "assets": "<%= destination %>/assets/",
    "layouts": {
      "files": {
        "src": "./src/common/tmpl/partials/layouts/**/*.hbs"
      },
      "options": {
        "base": "./src/common/tmpl/partials"
      }
    },
    "partials": {
      "files": {
        "src": ["./src/common/tmpl/partials/**/*.hbs"]
      },
      "options": {
        "base": "./src/common/tmpl/partials"
      }
    },
    "globals": {
      "files": {
        "cwd": "./src/common/data/",
        "src": ["./globals/**/*.{json,yaml}"]
      }
    },
    "controllerRegistry": {
      "file": "./src/common/js/packages.js"
    },
    "scripts": {
      "js": {
        "main": "<%= destination %>/js/app.js"
      },
      "css": {
        "main": "./style.css"
      }
    },
    "subtasks": [{
      "name": "pages",
      "layout": "layouts/default",
      "files": {
        "src": ["./src/**/*.hbs", "!./src/common/tmpl/partials/**/*.hbs"],
        "dest": "<%= destination %>"
      },
      "data": {
        "cwd": "./src/",
        "src": ["./**/*.{json,yaml}", "!./common/data/globals/**/*.{json,yaml}"]
      }
    }, {
      "name": "docs",
      "layout": "layouts/documentation",
      "files": {
        "src": ["./src/common/tmpl/partials/**/*.hbs"],
        "dest": "<%= destination %>",
        "base": "./src/common/tmpl/"
      }
    }],
    "watch": [{
      "src": ["src/**/*.hbs", "src/**/*.json"]
    }]
  },
  "postcss": {
    "subtasks": [{
      "name": "default",
      "sourcemap": false,
      "plugins": [{
        "name": "postcss-import",
        "params": []
      }, {
        "name": "precss",
        "params": []
      }, {
        "name": "postcss-calc",
        "params": []
      }, {
        "name": "postcss-clearfix",
        "params": []
      }, {
        "name": "autoprefixer",
        "params": [{
          "browsers": ["> 2%", "last 2 versions", "IE 9", "Firefox ESR"]
        }]
      }, {
        "name": "postcss-discard-comments",
        "params": []
      }, {
        "name": "cssnano",
        "params": []
      }],
      "files": {
        "src": ["./src/**/style.pcss"],
        "dest": "<%= destination %>"
      }
    }],
    "watch": [{
      "src": ["src/**/*.pcss"]
    }]
  },
  "purecss": {
    "breakpoints": {
      "xs": "screen and (min-width: 30em)",
      "sm": "screen and (min-width: 48em)",
      "md": "screen and (min-width: 62em)",
      "lg": "screen and (min-width: 75em)"
    },
    "files": {
      "dest": "./generated/pcss/"
    }
  },
  "sitemap": {
    "subtasks": [{
      "name": "default",
      "domain": "http://www.example.com",
      "files": {
        "src": ["<%= destination %>/**/*.html", "!<%= destination %>/partials/**/*.html"],
        "dest": "<%= destination %>"
      }
    }]
  },
  "webpack": {
    "subtasks": [{
      "name": "app",
      "hotReplacement": true,
      "entry": {
        "app": "./src/common/js/main"
      },
      "plugins": [{
        "script": "agency-environment/lib/webpack/plugins/provide",
        "config": {
          "$": "jquery",
          "jQuery": "jquery",
          "window.jQuery": "jquery",
          "root.jQuery": "jquery"
        }
      }, {
        "script": "agency-environment/lib/webpack/plugins/polyfills"
      }, {
        "script": "agency-environment/lib/webpack/plugins/dedupe"
      }, {
        "script": "agency-environment/lib/webpack/plugins/uglify"
      }],
      "module": {
        "preLoaders": [{
          "test": ".js$",
          "exclude": "node_modules",
          "loader": "jshint-loader"
        }],
        "loaders": [{
          "test": ".hbs$",
          "loader": "handlebars-loader",
          "query": {
            "knownHelpers": ["block", "content"],
            "helperDirs": [
              "<%= root %>/src/tmpl/partials"
            ],
            "debug": false
          }
        }, {
          "test": ".css$",
          "loader": "style-loader!css-loader"
        }, {
          "test": ".(png|jpg|gif|svg|ttf|woff|eot)$",
          "loader": "url-loader?limit=100000"
        }, {
          "test": ".modernizrrc$",
          "loader": "modernizr"
        }]
      },
      "resolve": {
        "alias": {
          "modernizr$": "<%= root %>/.modernizrrc"
        }
      },
      "files": {
        "src": ["./src/common/js/main.js"],
        "dest": "<%= destination %>/js/[name].js",
        "library": ["[name]"]
      }
    }, {
      "name": "embed",

      "entry": {
        "picture": "./src/common/js/polyfills/picture",
        "animationFrame": "./src/common/js/polyfills/animationFrame",
        "embed": "./src/common/js/embed"
      },

      "plugins": [{
        "script": "agency-environment/lib/webpack/plugins/dedupe"
      }, {
        "script": "agency-environment/lib/webpack/plugins/chunk",
        "config": {
          "main": "_main.js",
          "packages": ["picture", "animationFrame", "embed"]
        }
      }, {
        "script": "agency-environment/lib/webpack/plugins/uglify"
      }],
      "module": {
        "preLoaders": [{
          "test": ".js$",
          "exclude": "node_modules",
          "loader": "jshint-loader"
        }],
        "loaders": [{
          "test": ".modernizrrc$",
          "loader": "modernizr"
        }]
      },
      "resolve": {
        "alias": {
          "modernizr$": "<%= root %>/.modernizrrc"
        }
      },
      "files": {
        "src": ["./src/common/js/polyfills/animationFrame", "./src/common/js/polyfills/picture", "./src/common/js/embed"],
        "dest": "<%= destination %>/js/embed/[name].js",
        "library": ["[name]"]
      }
    }]
  },
  "zipcompress": {
    "subtasks": [{
      "name": "default",
      "excludes": [],
      "files": {
        "src": ["<%= destination %>"],
        "dest": "<%= destination %>"
      }
    }, {
      "name": "banner",
      "excludes": ["!<%= destination %>/**/fonts/**/*.{css,svg,woff2}"],
      "files": {
        "src": ["<%= destination %>/*", "!<%= destination %>/*.*"],
        "dest": "<%= destination %>/compressed"
      }
    }]
  }
}
